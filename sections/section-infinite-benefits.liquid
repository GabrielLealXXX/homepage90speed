<style>
  .infinite-benefits {
    width: 100%;
    background-color: {{ section.settings.background_color | default: '#000000' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding | default: 15 }}px 0;
    overflow: hidden;
    position: relative;
  }

  .infinite-benefits__container {
    display: flex;
    animation: infiniteScroll {{ section.settings.scroll_speed | default: 30 }}s linear infinite;
    width: calc(200% + 200px);
  }

  .infinite-benefits__track {
    display: flex;
    align-items: center;
    gap: {{ section.settings.item_spacing | default: 80 }}px;
    white-space: nowrap;
    flex-shrink: 0;
    padding-right: {{ section.settings.item_spacing | default: 80 }}px;
  }

  .infinite-benefits__item {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_text_gap | default: 12 }}px;
    font-size: {{ section.settings.font_size | default: 14 }}px;
    font-weight: {{ section.settings.font_weight | default: 500 }};
    color: inherit;
    flex-shrink: 0;
  }

  .infinite-benefits__icon {
    width: {{ section.settings.icon_size | default: 18 }}px;
    height: {{ section.settings.icon_size | default: 18 }}px;
    flex-shrink: 0;
  }

  .infinite-benefits__icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .infinite-benefits__text {
    white-space: nowrap;
    text-transform: {{ section.settings.text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.letter_spacing | default: 0.5 }}px;
  }

  @keyframes infiniteScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause animation on hover */
  .infinite-benefits:hover .infinite-benefits__container {
    animation-play-state: {{ section.settings.pause_on_hover | default: 'paused' }};
  }

  /* Mobile adjustments */
  @media screen and (max-width: 768px) {
    .infinite-benefits {
      padding: {{ section.settings.section_padding_mobile | default: 12 }}px 0;
    }

    .infinite-benefits__item {
      font-size: {{ section.settings.font_size_mobile | default: 12 }}px;
      gap: {{ section.settings.icon_text_gap_mobile | default: 8 }}px;
    }

    .infinite-benefits__icon {
      width: {{ section.settings.icon_size_mobile | default: 14 }}px;
      height: {{ section.settings.icon_size_mobile | default: 14 }}px;
    }

    .infinite-benefits__icon svg {
      width: 100%;
      height: 100%;
      fill: currentColor;
    }

    .infinite-benefits__track {
      gap: {{ section.settings.item_spacing_mobile | default: 50 }}px;
      padding-right: {{ section.settings.item_spacing_mobile | default: 50 }}px;
    }
  }
</style>

